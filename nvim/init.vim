set clipboard+=unnamedplus

" save undo-tree in files
set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=10000
set undoreload=10000

" set line numbers
set number

" use 4 spaces instaed of tab
" copy ident from current line when starting a new line
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
